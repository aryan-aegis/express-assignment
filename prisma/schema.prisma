const config =
  process.env.NODE_ENV !== 'production' ? await import('dotenv') : null

if (config) config.config()

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = process.env.DATABASE_URI 
}

model User {
  id Int @id @default(autoincrement())
  username String 
  email String
  phone String 
}